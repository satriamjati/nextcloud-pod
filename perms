sudo setfacl -R -m u:100032:rwx /mnt/data/nas/share
sudo setfacl -R -m d:u:100032:rwx /mnt/data/nas/share

sudo setfacl -R -m u:100032:rwx /srv/nas/share
sudo setfacl -R -m d:u:100032:rwx /srv/nas/share

sudo setfacl -R -m u:100032:rwx /srv/nextcloud
sudo setfacl -R -m d:u:100032:rwx /srv/nextcloud

sudo getfacl /mnt/data/nas/share
sudo getfacl /srv/nas/share
sudo getfacl /srv/nextcloud
